{
  "Configuration":
  {
    "status": "WARN",
    "properties":
    {
      "property":
      [
        {
          "name": "LOG_DIR",
          "value": "logs"
        },
        {
          "name": "LOG_PATTERN",
          "value": "[%d{HH:mm:ss.SSS}] [%5level | %logger{1}] %msg%n"
        },
        {
          "name": "LOG_LEVEL",
          "value": "INFO"
        }
      ]
    },
    "appenders":
    {
      "Console":
      {
        "name": "Console",
        "target": "SYSTEM_OUT",
        "PatternLayout":
        {
          "pattern": "${LOG_PATTERN}"
        },
        "Filters":
        {
          "BurstFilter":
          {
            "level": "WARN",
            "rate": "100",
            "maxBurst": "200"
          }
        }
      },
      "RollingFile":
      {
        "name": "RollingFile",
        "fileName": "${LOG_DIR}/app.log",
        "filePattern": "${LOG_DIR}/%d{yyyy-MM-dd}-%i.log.gz",
        "PatternLayout":
        {
          "pattern": "${LOG_PATTERN}",
          "header": "App log starts. Date: %d{yyyy-MM-dd}%n"
        },
        "Filters":
        {
          "BurstFilter":
          {
            "level": "WARN",
            "rate": "100",
            "maxBurst": "200"
          }
        },
        "Policies":
        {
          "TimeBasedTriggeringPolicy":
          {
            "interval": "1",
            "modulate": "true"
          },
          "SizeBasedTriggeringPolicy":
          {
            "size": "5 MB"
          }
        },
        "DefaultRolloverStrategy":
        {
          "max": "8",
          "fileIndex": "min"
        }
      }
    },
    "loggers":
    {
      "root":
      {
        "level": "${LOG_LEVEL}",
        "appender-ref":
        [
          {
            "ref": "Console",
            "level": "INFO"
          },
          {
            "ref": "RollingFile",
            "level": "INFO"
          }
        ]
      }
    }
  }
}